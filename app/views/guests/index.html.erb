<link rel="stylesheet" href="css/bootstrap/bootstrap.css" type="text/css" media="screen" />
<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listing Guests</h1>

  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Mehendi</th>
        <th>Wedding</th>
        <th>Reception</th>
        <th>Guest</th>
        <th>Accomodation</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @guests.each do |guest| %>
        <tr>
          <td><%= guest[:name] %></td>
          <td><%= guest[:email] %></td>
          <td><%= guest[:mehendi] %></td>
          <td><%= guest[:wedding] %></td>
          <td><%= guest[:reception] %></td>
          <td><%= guest[:guest] %></td>
          <td><%= guest[:accomodation] %></td>
          <td><%= link_to 'Show', guest %></td>
          <td><%= link_to 'Edit', edit_guest_path(guest) %></td>
          <td><%= link_to 'Destroy', guest, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

